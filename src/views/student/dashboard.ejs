<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
  <style>
    
    body {
  font-family: Arial, sans-serif;
}

#spacesContainer {
  margin-top: 20px;
}

.spaceBox {
  border: 1px solid #ccc;
  padding: 15px;
  margin-bottom: 20px;
  border-radius: 5px;
}

.spaceBox h3 {
  margin: 0 0 10px;
}

.spaceBox ul {
  list-style-type: none;
  padding: 0;
}

.spaceBox li {
  margin: 10px 0;
}

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
    }

    .modal-header {
      font-size: 20px;
      font-weight: bold;
    }

    /* Button styles */
    .btn {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>

<style>
  .loading-spinner {
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top: 4px solid #3498db;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 2s linear infinite;
    margin: 0 auto;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

</head>
<body>
  <div>
    <button id="createSpaceButton" class="btn">Create Space</button>
  </div>

<!-- Modal for Create Space -->
<div id="createSpaceModal" class="modal">
  <div class="modal-content">
    <span id="closeModal" style="float: right; cursor: pointer;">&times;</span>
    <h3>Create a New Space</h3>
    <form id="createSpaceForm" method="POST" action="/student/spaces/create" enctype="multipart/form-data">
      <div>
        <label for="companyName">Company Name</label>
        <input type="text" id="companyName" name="companyName" required />
      </div>
      <div>
        <label for="jobPosition">Job Position</label>
        <input type="text" id="jobPosition" name="jobPosition" required />
      </div>
      <div>
        <label for="jobDescription">Job Description</label>
        <textarea id="jobDescription" name="jobDescription" required></textarea>
      </div>
      <div>
        <label for="interviewRounds">Select Interview Rounds</label>
        <select id="interviewRounds" name="interviewRounds" multiple="multiple" style="width: 100%;">
          <option value="HR">HR</option>
          <option value="Technical">Technical</option>
          <option value="Aptitude">Aptitude</option>
          <!-- More rounds here -->
        </select>
      </div>
      <div>
        <label for="resume">Upload Resume</label>
        <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx" required />
      </div>

      <!-- Circular Loading Indicator -->
      <div id="loading" style="display: none;">
        <div class="loading-spinner"></div> <!-- Create a spinner here -->
      </div>

      <button type="submit" class="btn">Create Space</button>
    </form>
  </div>
</div>

<script>
  document.getElementById('createSpaceForm').addEventListener('submit', function(event) {
    // Show the loading spinner when the form is submitted
    document.getElementById('loading').style.display = 'block';
  });
</script>

  <!-- Existing spaces -->
  <div id="spacesContainer">
    <% spaces.forEach(space => { %>
      <div class="spaceBox">
        <h3><%= space.companyName %> - <%= space.jobPosition %></h3>
        <ul>
          <% space.interviewRounds.forEach(round => { %>
            <li>
              <%= round.name %> - <%= round.status %>
              <% if (round.status === 'not completed') { %>
                <form action="/student/spaces/start-round/<%= space._id %>/<%= round.name %>" method="POST">
                  <button class="btn" type="submit">Start Interview</button>
                </form>
              <% } else { %>
                <p>Summary: <%= round.summary %></p>
              <% } %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
  <script>
    $(document).ready(function () {
      // Initialize Select2 for dropdown
      $('#interviewRounds').select2();

      // Show the modal
      $('#createSpaceButton').on('click', function () {
        $('#createSpaceModal').show();
      });

      // Close the modal
      $('#closeModal').on('click', function () {
        $('#createSpaceModal').hide();
      });

      // Hide modal if clicked outside
      $(window).on('click', function (event) {
        if ($(event.target).is('#createSpaceModal')) {
          $('#createSpaceModal').hide();
        }
      });
    });
  </script>
</body>
</html>
