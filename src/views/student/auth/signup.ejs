<% if (error) { %>
    <div class="alert alert-danger text-center mt-3">
        <%= error %>
    </div>
<% } %>

<style>
    .custom-swal-popup {
    width: 500px !important; /* Increase width */
    height: auto !important; /* Adjust height dynamically */
    padding: 30px !important; /* Increase padding for better spacing */
}


    #loading {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .spinner {
        border: 6px solid #f3f3f3;
        border-radius: 50%;
        border-top: 6px solid #3498db;
        width: 50px;
        height: 50px;
        animation: spin 2s linear infinite;
    }
    .loading-text {
        margin-top: 10px;
        padding: 10px 20px;
        background: red;
        color: #fff;

        font-weight: bold;
        border-radius: 5px;
        text-align: center;
        font-size: 16px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

<!-- Start Sign up Area -->
<div class="signup-area rainbow-section-gapTop-big" data-black-overlay="2">
    <div class="sign-up-wrapper ">
        <div class="sign-up-box bg-flashlight">
            <div class="signup-box-top top-flashlight light-xl">
                <img class="boxed-logo-dark" src="/assets/images/logo/boxed-logo.png" alt="sign-up logo">
                <img class="boxed-logo-light" src="/assets/images/logo/boxed-logo-light.png" alt="sign-up logo">
            </div>
            <div class="separator-animated animated-true"></div>
            <div class="signup-box-bottom">
                <div class="signup-box-content">
                    <h4 class="title">Join Us!</h4>
                    <p>Sign up by entering your email address to get started. Your login credentials will be emailed to you.</p>
                    <form action="/signup" method="POST" id="registerForm">
                        <div class="input-section mail-section">
                            <div class="icon"><i class="feather-user"></i></div>
                            <input type="text" placeholder="Enter Your Name" name="name">
                        </div>
                        <div class="input-section mail-section">
                            <div class="icon"><i class="feather-mail"></i></div>
                            <input type="email" placeholder="Enter your email address" name="email" required>
                        </div>
                        <button type="submit" class="btn-default">Sign Up</button>
                    </form>
                </div>
                <div id="loading" style="display: none;">
                    <div class="spinner"></div><br>
                    <!-- <p class="loading-text">Please Wait! We Are Proceeding Your Registration..</p> -->
                </div>

                <div class="signup-box-footer">
                    <div class="bottom-text">
                        Already have an account? <a class="btn-read-more" href="/login"><span>Sign In</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
<!-- End Sign up Area -->

