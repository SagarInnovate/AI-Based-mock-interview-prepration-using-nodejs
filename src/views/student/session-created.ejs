<!-- views/session-created.ejs -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-white rounded-xl shadow-xl p-8">
      <div class="text-center mb-6">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-check text-2xl text-green-600"></i>
        </div>
        <h1 class="text-2xl font-bold text-gray-800">Session Created!</h1>
        <p class="text-gray-600 mt-2">Welcome, <%= name %></p>
      </div>
      
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <i class="fas fa-exclamation-circle text-yellow-500 mt-0.5"></i>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Important: Save Your Session ID</h3>
            <p class="text-sm text-yellow-700 mt-1">
              Please save this ID to continue your session in the future:
            </p>
          </div>
        </div>
        
        <div class="mt-3">
          <div class="flex items-center bg-white border border-gray-300 rounded-lg p-2">
            <span class="text-lg font-mono font-bold text-gray-800 mx-auto select-all"><%= uniqueId %></span>
          </div>
          <p class="text-xs text-gray-500 mt-2 text-center">Keep this ID in a secure place</p>
        </div>
      </div>
      
      <a href="/dashboard" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center">
        <span>Continue to Dashboard</span>
        <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>
  </div>